{
  "name": "svg-utils",
  "version": "1.2.3",
  "description": "Miscellaneous utility components for manipulating SVG",
  "pkg": "dist/svg-utils.min.js",
  "main": "dist/svg-utils.common.js",
  "module": "dist/svg-utils.mjs",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && rollup -c",
    "watch": "rollup -c -w",
    "minify": "uglifyjs dist/svg-utils.js -o dist/svg-utils.min.js -c -m --comments '/Version/'",
    "build-module": "rollup -c rollup.config.module.js",
    "prepublish": "npm run build && npm run minify && npm run build-module"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/svg-utils.git"
  },
  "keywords": [
    "svg",
    "component",
    "utils",
    "d3"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "http://bl.ocks.org/vasturiano"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasturiano/svg-utils/issues"
  },
  "homepage": "https://github.com/vasturiano/svg-utils#readme",
  "dependencies": {
    "d3-array": "^1.2.1",
    "d3-scale": "^1.0.6",
    "d3-selection": "^1.1.0",
    "kapsule": "^1.7.8"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0",
    "rollup-watch": "^4.3.1",
    "uglify-js": "^3.0.28"
  }
}
