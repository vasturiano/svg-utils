{
  "name": "svg-utils",
  "version": "1.2.7",
  "description": "Miscellaneous utility components for manipulating SVG",
  "unpkg": "dist/svg-utils.min.js",
  "main": "dist/svg-utils.common.js",
  "module": "dist/svg-utils.module.js",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && rollup -c",
    "dev": "rollup -c -w",
    "minify": "terser dist/svg-utils.js -o dist/svg-utils.min.js -c -m --comments '/Version/'",
    "build-module": "rollup -c rollup.config.module.js",
    "prepare": "npm run build && npm run minify && npm run build-module"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/svg-utils.git"
  },
  "keywords": [
    "svg",
    "component",
    "utils",
    "d3"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "http://bl.ocks.org/vasturiano"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasturiano/svg-utils/issues"
  },
  "homepage": "https://github.com/vasturiano/svg-utils#readme",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "d3-array": "^2.4.0",
    "d3-scale": "^3.2.1",
    "d3-selection": "^1.4.1",
    "kapsule": "^1.12.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.0.6",
    "rollup-plugin-babel": "^4.4.0",
    "terser": "^4.6.6"
  }
}
